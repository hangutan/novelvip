{
  "compilerOptions": {
    "target": "es5",
    "lib": ["dom", "dom.iterable", "esnext"],
    "allowJs": true,
    "skipLibCheck": true,
    "strict": false,
    "forceConsistentCasingInFileNames": true,
    "noEmit": true,
    "esModuleInterop": true,
    "module": "esnext",
    "moduleResolution": "node",
    "resolveJsonModule": true,
    "isolatedModules": true,
    "jsx": "preserve",
    "incremental": true,
    "baseUrl": ".",
    "paths": {
      "@components/*": ["src/components/*"],
      "@components": ["src/components"],
      "@config/*": ["src/config/*"],
      "@config": ["src/config"],
      "@constants/*": ["src/constants/*"],
      "@constants": ["src/constants"],
      "@pages/*": ["src/pages/*"],
      "@pages": ["src/pages"],
      "@layout/*": ["src/layout/*"],
      "@layout": ["src/layout"],
      "@services/*": ["src/services/*"],
      "@services": ["src/services"],
      "@styles/*": ["src/styles/*"],
      "@styles": ["src/styles"],
      "@utils/*": ["src/utils/*"],
      "@utils": ["src/utils"],
      "@store/*": ["src/store/*"],
      "@store": ["src/store"],
      "@assets/*": ["src/assets/*"],
      "@assets": ["src/assets"],
      "@hooks/*": ["src/hooks/*"],
      "@hooks": ["src/hooks"],
      "@layouts/*": ["src/layouts/*"],
      "@layouts": ["src/layouts"],
      "@types/*": ["src/types/*"],
      "@types": ["src/types"],
      "@contexts/*": ["src/contexts/*"],
      "@contexts": ["src/contexts"],
    }
  },
  "include": ["next-env.d.ts", "**/*.ts", "**/*.tsx"],
  "exclude": ["node_modules"]
}
